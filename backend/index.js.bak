// index.js
const express = require("express");
const app = express();
const PORT = 3000;

app.use(express.json());

app.get("/api/recipes", (req, res) => {
  const sample = [
    { id: 1, title: "Tomato Pasta", ingredients: ["tomato","pasta"] },
    { id: 2, title: "Veggie Omelette", ingredients: ["egg","pepper","onion"] }
  ];
  res.json(sample);
});

app.get("/", (req, res) => {
  res.send("Hello Chefio!");
});

app.listen(PORT, () => {
  console.log(`Server running at http://localhost:${PORT}`);
});
